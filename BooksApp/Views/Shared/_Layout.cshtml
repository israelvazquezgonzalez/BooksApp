<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BooksApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BooksApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="overlay"></div>
    <div id="loader">
        <img src="/lib/content/book-gif.gif"/>
        <p>Loading...</p>
        <div class="circle"></div>
    </div>
    <div class="container-full">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer bg-secondary text-light">
        <div class="container">
            <div class="row">
                <div class="col">
                    &copy; 2022 - Books Search App
                </div>
                <div class="col text-end">
                    <i>Book Search App by Israel Vazquez-Gonzalez</i>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
