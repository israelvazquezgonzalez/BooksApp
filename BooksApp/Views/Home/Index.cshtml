@{
    ViewData["Title"] = "Home Page";
}
<div id="content-anchor"></div>
<div id="search-hero" class="px-4 py-5 my-5 text-center">

    <div class="col-10 col-sm-10 col-lg-6 mx-auto form-inline mb-3">

        <img class="d-block mx-auto" src="/lib/content/home-book-splash.svg" alt="Book finder app hero image" width="300">

        <h1 class="display-4 mt-2 fw-bold">Book finder</h1>

        <p class="lead mb-4">A quick way to find the book you are looking for.</p>
      
        <form id="search-form" class="form-inline">

            <div class="input-group">

                <input id="search-input" type="text" class="form-control form-control-lg"
                       placeholder="Search your book" name="query"
                       aria-label="Search book" aria-describedby="search">

                <div class="input-group-append">
                    <button class="btn btn-secondary btn-lg br" type="submit" id="search-button">Find your book</button>
                </div>

                <div class="invalid-feedback">
                    Search field cannot be empty
                </div>

            </div>
        </form>

    </div>

</div>

<div id="search-results">
</div>